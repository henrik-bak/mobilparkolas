<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.henrik.bak.mobilparkolas"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.henrik.bak.mobilparkolas.SettingsActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.henrik.bak.mobilparkolas.Szeged"
            android:configChanges="orientation"
            android:label="@string/title_activity_szeged"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.henrik.bak.mobilparkolas.MobilParkActivity"
            android:label="@string/title_activity_mobil_park" >
        </activity>
    </application>

</manifest>